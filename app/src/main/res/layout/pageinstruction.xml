<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/Gdice"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ydice"
        app:srcCompat="@drawable/dice23" />

    <ImageView
        android:id="@+id/Rdice"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dice3" />

    <ImageView
        android:id="@+id/Ydice"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rdice"
        app:srcCompat="@drawable/dice13" />

    <TextView
        android:id="@+id/GText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Negative Dice (-5)"
        android:textColor="#6C0FCA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/Gdice"
        app:layout_constraintStart_toEndOf="@+id/Gdice"
        app:layout_constraintTop_toTopOf="@+id/Gdice" />

    <TextView
        android:id="@+id/Rtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Negative Dice (-3)"
        android:textColor="#6C0FCA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/Rdice"
        app:layout_constraintStart_toEndOf="@+id/Rdice"
        app:layout_constraintTop_toTopOf="@+id/Rdice" />

    <TextView
        android:id="@+id/Ytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Positive Dice (4)"
        android:textColor="#6C0FCA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/Ydice"
        app:layout_constraintStart_toEndOf="@+id/Ydice"
        app:layout_constraintTop_toTopOf="@+id/Ydice" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Gdice"
        app:srcCompat="@drawable/endgame" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:text="To end game and go back."
        android:textAlignment="center"
        android:textColor="#6C0FCA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:text="Addition Game Example"
        android:textColor="#6C0FCA"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:text="Subtraction Game Example"
        android:textColor="#6C0FCA"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="(-3) + 4 + (-5) = -4"
        android:textColor="#6C0FCA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="(-3) - 4 - (-5) = -2"
        android:textColor="#6C0FCA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</androidx.constraintlayout.widget.ConstraintLayout>