<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.focusminds.diceroll">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="in.focusminds.diceroll.LevelSelection"
            android:screenOrientation="portrait"
            android:parentActivityName="in.focusminds.diceroll.MainActivity"
            android:theme="@style/AppTheme.Noactionbar"
           />
        <activity
            android:name="in.focusminds.diceroll.AboutActivity"
            android:label="About"
            android:parentActivityName="in.focusminds.diceroll.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="in.focusminds.diceroll.InstructionActivty"
            android:label="Instruction"
            android:parentActivityName="in.focusminds.diceroll.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.focusminds.diceroll.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Noactionbar" />
        <activity
            android:name="in.focusminds.diceroll.AdditionActivity"

            android:screenOrientation="portrait" />
        <activity
            android:name="in.focusminds.diceroll.LogoScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Noactionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>